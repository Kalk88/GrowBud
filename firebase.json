{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "client/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "predeploy": [
      "npm --prefix \"client\" run build"
    ]
  },
  "functions": {
    "source": "server/functions",
    "predeploy": [
      "npm --prefix \"server/functions\" run lint",
      "npm --prefix \"server/functions\" run build"
    ]
  }
}
